---
# Managed by modulesync - DO NOT EDIT
# https://voxpupuli.org/docs/updating-files-managed-with-modulesync/

name: Release

# yamllint disable-line rule:truthy
on:
  push:
    tags:
      - '*'

jobs:
  release:
    steps:
      - name: Release
        uses: voxpupuli/gha-puppet/.github/workflows/release.yml@v3
        with:
    <%- if @configs['with'] -%>
    <%- @configs['with'].each do |k,v| -%>
    <%- if v.is_a?(String) -%>
          <%= k %>: '<%= v %>'
    <%- else -%>
          <%= k %>: <%= v %>
    <%- end -%>
    <%- end -%>
    <%- end -%>
    <%- unless @configs['with']&.has_key?('allowed_owner') -%>
          allowed_owner: '<%= @configs[:namespace] %>'
    <%- end -%>
        secrets:
          # Configure secrets here:
          #  https://docs.github.com/en/actions/security-guides/encrypted-secrets
          username: ${{ secrets.PUPPET_FORGE_USERNAME }}
          api_key: ${{ secrets.PUPPET_FORGE_API_KEY }}
      - name: Create GitHub release
        uses: voxpupuli/gha-create-a-github-release@v1
      - name: Attach puppet module to GitHub Release
        shell: bash
        env:
          GH_TOKEN: ${{ github.token }}
        run: gh release upload ${{ github.ref_name }} pkg/puppet-*tar.gz
